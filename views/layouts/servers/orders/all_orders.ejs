<!doctype html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Thống kê</title>
    <%- include('../partials/head') %>
</head>
<body>
    <!--sidebar start-->
    <%- include('../partials/sidebar') %>
    <!-- sidebar end -->

    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="table-agile-info">
                <div class="table-heading">
                    <div class="row">
                        <div class="col">
                            <h3>Tất cả đơn hàng</h3>
                        </div>
                        <div class="col">
                            <div class="order-status" style="margin-left: 270px;">
                                <a href="/new_orders">Đơn mới |</a>
                                <a href="/accept_orders">Đã xác nhận |</a>
                                <a href="/done_orders">Đã hoàn thành</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="table-responsive">
                        <table id="myTable" class="table table-striped table-bordered">
                            <thead>
                            <tr>
                                <th style="width: 45px;">STT</th>
                                <th style="width: 70px;">Mã đơn</th>
                                <th style="width: 145px; text-align: center;">Người nhận</th>
                                <th style="text-align: center;width: 90px;">SĐT</th>
                                <th style="text-align: center;">Địa chỉ giao hàng</th>
                                <th style="text-align: center;">Tổng tiền</th>
                                <th style="text-align: center;">Ngày đặt</th>
                                <th style="text-align: center;">Trạng thái</th>
                                <th style="text-align: center;">Tuỳ biến</th>
                                <th style="text-align: center;">Chi tiết</th>
                            </tr>
                            </thead>
                            <tbody>
                                <% for(let i=0; i < danhsach.length; i++) { %>
                                    <tr>
                                        <td style="text-align: center;"><%= i+1 %></td>
                                        <td style="text-align: center;"><%= danhsach[i]._id %></td>
                                        <td style="text-align: center;"><%= danhsach[i].userID.fullname %></td>
                                        <td style="text-align: center;"><%= danhsach[i].phone %></td>
                                        <td style="text-align: center;"><%= danhsach[i].shippingAddress %></td>
                                        <td style="text-align: center;"><%= VND.format(danhsach[i].total) %></td>
                                        <td style="text-align: center;"><%= danhsach[i].timeIn %></td>
                                        <td><% if(danhsach[i].orderStatus == 0){ %> Đang chờ xác nhận <% }else
                                            if(danhsach[i].orderStatus == 1){ %> Đã được xác nhận <% }else if(danhsach[i].orderStatus ==
                                            2){ %> Đang đóng gói <% }else if(danhsach[i].orderStatus == 3){ %> Đang vận chuyển <% }else if(danhsach[i].orderStatus == 4){ %>Đã nhận hàng<%}else{%>Đã huỷ<%}%></td>
                                        <td style="text-align: center;">
                                            <a style="text-align: center;" href="">
                                                <button class="btn btn-success" style="width: 80px;"><b>Xác nhận</b></button>
                                            </a>
                                    </td>
                                    <td style="text-align: center;">
                                        <a class="btn btn-primary" style="text-align: center;" href="/order_detail">
                                            Xem chi tiết
                                        </a>
                                    </td>
                                </tr>
                                <%}%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    <!--main content end-->

</section>
    <%- include('../partials/footer') %>
</body>
</html>

