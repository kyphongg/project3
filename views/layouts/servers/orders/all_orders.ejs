<!doctype html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Thống kê</title>
    <%- include('../partials/head') %>
</head>
<body>
    <!--sidebar start-->
    <%- include('../partials/sidebar') %>
    <!-- sidebar end -->

    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="table-agile-info">
                <div class="table-heading">
                    <div class="row">
                        <div class="col">
                            <h3>Tất cả đơn hàng</h3>
                        </div>
                        <div class="col">
                            <div class="order-status" style="margin-left: 70px;">
                                <a href="/new_orders">Đơn mới (<%= orderNew %>) |</a>
                                <a href="/accept_orders">Đã xác nhận (<%= orderAccept %>) |</a>
                                <a href="/done_orders">Đã hoàn thành (<%= orderDone %>) |</a>
                                <a href="/cancel_orders">Đã huỷ (<%= orderCancel %>) </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="table-responsive">
                        <table id="myTable" class="table table-striped table-bordered">
                            <thead>
                            <tr>
                                <th style="text-align: center;width: 45px;">STT</th>
                                <th style="text-align: center;width: 70px;">Mã đơn</th>
                                <th style="width: 145px; text-align: center;">Người nhận</th>
                                <th style="text-align: center;width: 90px;">SĐT</th>
                                <th style="text-align: center;">Tổng tiền</th>
                                <th style="text-align: center;">Ngày đặt</th>
                                <th style="text-align: center;">Trạng thái</th>
                                <th style="text-align: center;">Chi tiết</th>
                            </tr>
                            </thead>
                            <tbody>
                                <% for(let i=0; i < danhsach.length; i++) { %>
                                <tr>
                                    <td style="text-align: center;"><%= i+1 %></td>
                                    <td style="text-align: center;"><%= danhsach[i]._id %></td>
                                    <td style="text-align: center;"><%= danhsach[i].shippingName %></td>
                                    <td style="text-align: center;"><%= danhsach[i].shippingPhone %></td>
                                    <td style="text-align: center;"><%= VND.format(danhsach[i].total) %></td>
                                    <td style="text-align: center;"><%= danhsach[i].timeIn %></td>
                                    <td style="text-align: center;"><% if(danhsach[i].orderStatus == 0){ %> Đang chờ xác nhận <% }else
                                        if(danhsach[i].orderStatus == 1){ %> Đã xác nhận và đóng gói <% }else if(danhsach[i].orderStatus ==
                                        2){ %> Đang vận chuyển <% }else if(danhsach[i].orderStatus == 3){ %> Đã nhận hàng <% }else if(danhsach[i].orderStatus == 4){ %>Đã huỷ<%}%></td>
                                    <td style="text-align: center;">
                                        <a class="btn btn-primary" style="text-align: center;" href="/order_detail/<%= danhsach[i]._id %>">
                                            Xem chi tiết
                                        </a>
                                    </td>
                                </tr>
                                <%}%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    <!--main content end-->

</section>
    <%- include('../partials/footer') %>
</body>
</html>

