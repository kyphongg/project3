<!doctype html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Nhập kho</title>
    <%- include('../partials/head') %>
</head>
<body>
    <!--sidebar start-->
    <%- include('../partials/sidebar') %>
    <!-- sidebar end -->

    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="table-agile-info">
                <h3>Nhập kho</h3>
                <div class="panel-body">
                    <div class="position-center">
                        <form action="/save_warehouse" method="post">
                            
                            <div class="form-group">
                                <label>Game</label>
                                <select name="productID" class="form-control m-bot15">
                                    <% for(let i=0; i < danhsach.length; i++) { %>
                                        <option value="<%= danhsach[i].id %>"><%= danhsach[i].productName %></option>
                                    <% } %>
                                </select>
                            </div>
                            
                            <div class="form-group">
                                <label>Số lượng</label>
                                <input name="quantityIn" type="text" class="form-control">
                            </div>
                            <a href="/warehouse"><button type="button" class="btn btn-info" ><i class="fa-solid fa-arrow-left-long"></i> Quay lại</button></a>
                            <button type="submit" class="btn btn-success"><i class="fa-solid fa-plus"></i> Nhập mới</button>
                        </form>
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>    
                                    <th style="text-align: center; width: 55px;">#</th>
                                    <th style="text-align: center; width: 450px;">Game</th>
                                    <th style="text-align: center;">Số lượng nhập</th>
                                    <th style="text-align: center;">Tùy biến</th>
                                </tr>
                            </thead>

                            <tbody id="TBody">
                                <tr id="TRow">
                                    <td style="text-align: center;">1</td>
                                    <td>
                                        <select class="form-control m-bot15">
                                            <option value="">ABC</option>
                                            <option value="">BCD</option>
                                        </select>
                                    </td>
                                    <td><input name="quantityIn" type="text" class="form-control" placeholder="Nhập số lượng"></td>
                                    <td style="text-align: center;"><button class="btn btn-danger" onclick="btnDEL(this)">Xóa dòng</button></td>    
                                </tr>
                            </tbody>
                        </table>
                        <input type="button" class="btn btn-success" value="Thêm dòng" onclick="btnADD()">
                    </div>
                </div>
            </div>
        </section>
    <!--main content end-->

</section>
    <%- include('../partials/footer') %>
</body>

<script>
    function btnADD() {
        var v = $("#TRow").clone().appendTo("TBody");
        $(v).find("input").val('');
    }

    function btnDEL(v) {
        $(v).parent().parent().remove();
    }
</script>
</html>  

