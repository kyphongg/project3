<!doctype html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Thống kê</title>
    <%- include('../partials/head') %>
</head>
<body>
    <!--sidebar start-->
    <%- include('../partials/sidebar') %>
    <!-- sidebar end -->

    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="table-agile-info">
                <h3>Doanh thu ngày <%= time %></h3>
                <br>
                <div class="panel panel-default">
                    <div class="table-responsive">
                      <table
                        id="myTable"
                        class="table table-striped table-bordered"
                        style="text-align: center"
                      >
                        <thead>
                          <tr>
                            <th style="width: 50px; text-align: center">STT</th>
                            <th style="text-align: center">Mã đơn hàng</th>
                            <th style="text-align: center; width: 180px">Thời gian nhận</th>
                            <th style="text-align: center">Tổng tiền</th>
                            <th style="text-align: center">Chi tiết</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% for(let i=0; i < danhsach.length; i++) { %>
                          <tr>
                            <td><%= i+1 %></td>
                            <td><%= danhsach[i]._id %></td>
                            <td><%= danhsach[i].timeOut %></td>
                            <td><%= VND.format(danhsach[i].total) %></td>
                            <td>
                              <a
                                href="/sales_detail/<%= danhsach[i]._id %>"
                                class="active"
                                ui-toggle-class=""
                              >
                                <i
                                  class="fa-solid fa-eye"
                                  style="font-size: 25px; color: #5cb85c"
                                ></i>
                              </a>
                            </td>
                          </tr>
                          <%}%>
                        </tbody>
                      </table>
                    </div>
                    <br>
                    <div class="sales-price">
                      <b style="margin-right: 35px">Tổng doanh thu:</b>
                      <p style="color: #dc3545; font-weight: 500">
                        <%= VND.format(money) %>
                      </p>
                    </div>
                    <br>
                    <h3>Số lượng từng sản phẩm bán ra theo ngày <%= time %></h3>
                    <br>
                    <div class="table-responsive">
                      <table id="myTable"class="table table-striped table-bordered"style="text-align: center">
                        <thead>
                          <tr>
                              <th style="width: 50px; text-align: center;">STT</th>
                              <th style="text-align: center;">Sản phẩm</th>
                              <th style="text-align: center;">Số lượng bán</th>
                          </tr>
                          </thead>
                          <tbody>
                            <% for(let i = 0; i < sanpham.length; i++) {%>
                                <% sanpham[i].productList.forEach(function(id) { %>
                            <tr>
                                <td><%= i+1 %></td>
                                <td><%= id.productName %></td>
                                <td><%= sanpham[i].totalCount %></td>
                            </tr>
                            <% }); %>
                            <%}%>
                        </tbody>
                      </table>
                    </div>
                  </div>
                <a href="/sales">
                    <button type="button" class="btn btn-info"><i class="fa-solid fa-arrow-left-long"></i> Quay lại</button>
                </a>
            </div>
        </section>
    </section>
    <!--main content end-->
    <%- include('../partials/footer') %>
</body>
</html>

