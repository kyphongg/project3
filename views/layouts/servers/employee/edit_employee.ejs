<!doctype html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sửa thông tin nhân viên</title>
    <%- include('../partials/head') %>
</head>
<body>
    <!--sidebar start-->
    <%- include('../partials/sidebar') %>
    <!-- sidebar end -->

    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="table-agile-info">
                <h3>Sửa</h3>
                <div class="panel-body">
                    <div class="position-center">
                        <form action="/edit_save" method="post">
                            <div class="form-group">
                                <input type="hidden" class="form-control" name="id" placeholder="Tên nhân viên" value="<%= nhanvat._id %>" required="">
                            </div>
                            <div class="form-group">
                                <label >Tên nhân viên</label>
                                <input type="text" class="form-control" name="fullname" placeholder="Tên nhân viên" value="<%= nhanvat.fullname %>" required="">
                            </div>
                            <div class="form-group">
                                <label >Email</label>
                                <input type="text" class="form-control" name="email" placeholder="Email" value="<%= nhanvat.email %>" required="">
                            </div>
                            <div class="form-group">
                                <label >Username</label>
                                <input type="text" class="form-control" name="username" placeholder="Username" value="<%= nhanvat.username %>" required="">
                            </div>
                            <div class="form-group">
                                <label >Chức vụ</label>
                                <select name="role" class="form-control m-bot15">
                                    <% if(nhanvat.role == 0){ %>
                                        <option selected value="0">Quản lý</option>
                                        <option value="1">Nhân viên kho</option>
                                        <option value="2">Nhân viên đơn hàng</option>
                                        <option value="3">Nhân viên CSKH</option>
                                    <% }else if(nhanvat.role == 1){ %>
                                        <option selected value="1">Nhân viên kho</option>
                                        <option value="0">Quản lý</option>
                                        <option value="2">Nhân viên đơn hàng</option>
                                        <option value="3">Nhân viên CSKH</option>   
                                    <% }else if(nhanvat.role == 2){ %>
                                        <option selected value="2">Nhân viên đơn hàng</option>
                                        <option value="0">Quản lý</option>
                                        <option value="1">Nhân viên kho</option>
                                        <option value="3">Nhân viên CSKH</option>   
                                    <% }else if(nhanvat.role == 3){ %>
                                        <option selected value="3">Nhân viên CSKH</option>
                                        <option value="0">Quản lý</option>
                                        <option value="1">Nhân viên kho</option>
                                        <option value="2">Nhân viên đơn hàng</option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label >Trạng thái</label>
                                <select name="status" class="form-control m-bot15">
                                    <% if(nhanvat.status == 0){ %>
                                        <option selected value="0">Kích hoạt</option>
                                        <option value="1">Không kích hoạt</option>
                                    <% }else if(nhanvat.status == 1){ %>
                                        <option selected value="1">Không kích hoạt</option>
                                        <option value="0">Kích hoạt</option>
                                    <% } %>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-info"><i class="fa-solid fa-plus"></i>Sửa</button>
                        </form>
                    </div>
        
                </div>
            </div>
        </section>
    <!--main content end-->

</section>
    <%- include('../partials/footer') %>
</body>
</html>

