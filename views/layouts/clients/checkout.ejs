                        <i class="fa-solid fa-truck-fast"></i>
                        <h3>Thông tin vận chuyển</h3>
                    </div>
                    <div class="info-detail">
                        <form action="" class="payment-infomation">
                            <div class="payment-form">
                                <p>Email</p>
                                <input type="email" value="kyphong2802@gmail.com">
                            </div>
                            <div class="payment-form">
                                <p>Họ và tên</p>
                                <input type="text" value="Kỳ Phong">
                            </div>
                            <div class="payment-form">
                                <p>Số điện thoại</p>
                                <input type="text" value="0966331402">
                            </div>
                            <div class="payment-form">
                                <p>Địa chỉ</p>
                                <input type="text">
                            </div>
                            <div class="payment-form">
                                <p>Tỉnh thành</p>
                                <select>
                                    <option value="0">Chọn thành phố</option>
                                    <option value="1">Thành phố Hà Nội</option>
                                    <option value="2">Thành phố Hồ Chí Minh</option>
                                </select>
                            </div>
                            <div class="payment-form">
                                <p>Quận huyện</p>
                                <select>
                                    <option value="0">Chọn quận huyện</option>
                                    <option value="1">Thành phố Hà Nội</option>
                                    <option value="2">Thành phố Hồ Chí Minh</option>
                                </select>
                            </div>
                            <div class="payment-form">
                                <p>Phường xã</p>
                                <select>
                                    <option value="0">Chọn phường xã</option>
                                    <option value="1">Thành phố Hà Nội</option>
                                    <option value="2">Thành phố Hồ Chí Minh</option>
                                </select>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        
